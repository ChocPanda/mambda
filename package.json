{
  "name": "mambda",
  "version": "1.1.2",
  "description": "A Middleware and lifecycle framework for build AWS Lambdas",
  "author": "ChocPanda",
  "repository": "github:ChocPanda/mambda",
  "bugs": "https://github.com/ChocPanda/mambda/issues",
  "keywords": [
    "aws",
    "lambda",
    "middleware",
    "faas"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "commit": "git-cz",
    "build": "rollup -c",
    "test": "nyc ava",
    "test:unit": "nyc ava",
    "test:cov": "nyc ava && nyc report",
    "test:report": "nyc ava --tap | tap-junit --output ./reports/ava --name test-results.xml",
    "lint": "xo",
    "lint:test": "xo",
    "lint:fix": "xo --fix",
    "lint:report": "xo --reporter junit > ./reports/xo/test-results.xml",
    "lint:md": "remark ./README.md src/**/README.md --output",
		"release": "semantic-release",
		"docs-toc": "node ./scripts/update-toc.js",
		"postpublish": "node ../scripts/post-publish.js"
  },
  "files": [
    "**/index.js",
    "**/*.md"
  ],
  "dependencies": {
    "http-errors": "^1.7.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "ava": "^2.2.0",
    "ava-env": "^2.0.2",
    "codacy-coverage": "^3.4.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "markdown-toc": "^1.2.0",
    "ninos": "^3.0.0",
    "nyc": "^14.0.0",
    "path": "^0.12.7",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-recommended": "^3.0.2",
    "remark-preset-lint-styleguide": "^1.0.0",
    "rollup": "^1.14.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-copy": "^3.0.0",
    "rollup-plugin-license": "^0.9.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "semantic-release": "^15.13.3",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "tap-junit": "^3.1.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "prettier": "true"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
